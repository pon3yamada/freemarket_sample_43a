= render 'shared/second_header'
.login__main
  .login__panel
    .login__no-account
      %p アカウントをお持ちでない方はこちら
      = link_to new_mypage_path do
        新規会員登録
    .login__form--inner
      = link_to user_facebook_omniauth_authorize_path, id: 'facebook__login', class: 'btn__default btn__sns btn__sns-facebook' do
        .icon__facebook
          %i.fab.fa-facebook
        Facebookでログイン
      = link_to user_google_oauth2_omniauth_authorize_path, id: 'google__login', class: 'btn__default btn__sns btn__sns-google' do
        .icon__google-plus
          %i.fab.fa-google-plus-g
        Googleでログイン
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .login__form--inner
        .form__group
          = f.email_field :email, class: "login__input__text input__default", placeholder: 'メールアドレス'
        .form__group
          = f.password_field :password, class: "login__input__text input__default", placeholder: 'パスワード'
        .form__group
          = recaptcha_tags
          %button.login__submit.btn__default.btn__red{ type: 'submit' } ログイン
          = link_to '#' do
            パスワードをお忘れの方
  %form#login__form__facebook{ novalidate: 'novalidate' }
    %input{ type: 'hidden', name:'__crsf_value' }
    %input{ type: 'hidden', name:'nickname' }
    %input{ type: 'hidden', name:'email' }
    %input{ type: 'hidden', name:'facebook_user_id' }
    %input{ type: 'hidden', name:'facebook_access_token' }
    %input{ type: 'hidden', name:'login_type', value:'facebook' }
  %form#login__form__google{ novalidate: 'novalidate' }
    %input{ type: 'hidden', name:'__crsf_value' }
    %input{ type: 'hidden', name:'nickname' }
    %input{ type: 'hidden', name:'email' }
    %input{ type: 'hidden', name:'google_user_id' }
    %input{ type: 'hidden', name:'google_access_token' }
    %input{ type: 'hidden', name:'login_type', value:'facebook' }
  %input#google__client__id{ type: 'hidden' }
  %input#facebook__app__id{ type: 'hidden' }
= render 'shared/second_footer'
